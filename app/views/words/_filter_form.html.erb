<div class="row" id="words">
  <%= form_tag words_path, method: :get do %>
    <div class="row">
      <div class="word-filter">
        <%= label_tag t "lesson.form.title.categories" %>
        <%= select_tag "category",
            options_from_collection_for_select(@categories, "id", "name", @category) %>
        <% @all_status.each do |status, status_name| %>
          <%= radio_button_tag "status", status, @status.to_i == status %>
          <%= label_tag status_name %>
        <% end %>
      </div>
    </div>
    <br>
    <div class="row col-md-2 col-md-offset-5">
      <%= submit_tag t "lesson.form.button.filter", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>